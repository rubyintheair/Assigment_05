<h1>Login now! Banh peu!</h1>
<div class="column is-4">
  <%= form_tag login_path do %>
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= text_field_tag :email, nil, placeholder: "abc@gmail.com", class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= password_field_tag :password, nil, placeholder: "*********", class: "input" %>
    </div>
  </div>

  <div class="field">
    <p class="control">
      <button class="button is-success">
        Login
      </button>
    </p>
  </div>
  <% end %>
</div>