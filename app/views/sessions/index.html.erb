<h1>Login now! Banh peu!</h1>
<div class="column is-4">
  <%= form_for @user do |f| %>
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.text_field "email", class: "input", placeholder: "abc@gmail.com" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= f.password_field "password", class: "input", placeholder: "********" %>
    </div>
  </div>

  <div class="field">
    <p class="control">
      <button class="button is-success">
        Login
      </button>
    </p>
  </div>
  <% end %>
</div>