<div class="message">
  <article class="message">
    <div class="message-header"style="flex-direction:column; align-items: left">
      <div>
        <strong>From: </strong><%= message.sender.name %>
      </div>
      <br>
      <div>
        <strong>To: </strong><%= message.recipient.name %>
      </div>
    </div>
    <div class="message-body">
      <%= message.body %>
    </div>
  </article>
</div>
