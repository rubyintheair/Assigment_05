<!DOCTYPE html>
<html>
  <head>
    <title>Banhbeobook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <nav class="navbar ">
    <div class="navbar-brand">
      <% if !current_user %>
        <a class="navbar-item" href="/">
          <strong>Banhbeobook</strong>
        </a>
      <% else %>
        <%= link_to "Banhbeobook", users_path, class:"navbar-item" %>
      <% end %>
      <div class="navbar-start">
        <% if current_user %>
          <%= link_to "Logout", logout_path, class:"navbar-item" %>  
          <%= link_to "Edit", edit_path, class:"navbar-item" %>  
        <% else %>
          <%= link_to "Sign Up", new_user_path, class:"navbar-item" %>
          <%= link_to "Login", login_path, class:"navbar-item" %>
        <% end %>
      </div>
      <div class="navbar-end">
        <% if current_user %>  
          <%= link_to "My Page", show_path, class:"navbar-item" %>  
          <%= link_to "Messages", messages_path, class:"navbar-item" %>
        <% end %>
      </div>
    </div>
    </nav>

    <div class="container" style="margin-top: 20px">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </body>
</html>
