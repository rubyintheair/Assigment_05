<!DOCTYPE html>
<html>
  <head>
    <title>Banhbeobook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <nav class="navbar ">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>Banhbeobook</strong>
      </a>
      <div class="navbar-start">
        <%= link_to "Sign Up", new_user_path, class:"navbar-item" %>
        <% if current_user %>
          <%= link_to "Logout", logout_path, class:"navbar-item" %>  
        <% else %>
          <%= link_to "Login", login_path, class:"navbar-item" %>
        <% end %>
      </div>
    </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
