<h1>Sign up now! Banh peu!</h1>
<div class="column is-4">
  <%= form_for User.new do |f| %>
  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <%= f.text_field "name", class: "input", placeholder: "Name" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.text_field "email", class: "input", placeholder: "abc@gmail.com" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= f.password_field "password", class: "input", placeholder: "********" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password Confirmation</label>
    <div class="control">
      <%= f.password_field "password_confirmation", class: "input", placeholder: "********" %>
    </div>
  </div>

  <div class="field">
    <p class="control">
      <button class="button is-success">
        Sign Up
      </button>
    </p>
  </div>
  <% end %>
</div>